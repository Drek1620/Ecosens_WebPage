<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecosens_WebPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecosens_WebPage.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="bg-dark text-white position-relative mb-4" style="background-image: url('/images/Imagen_Hero.png'); background-size: cover; background-repeat: no-repeat; background-position: center; height: 30rem;">
        <div class="position-absolute w-100 h-100" style="background-color: rgba(0,0,0,0.7);">
            <div class="container text-center">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center pt-4">
                    <a href="index.html" class="text-white text-decoration-none">
                        <h1 class="m-0 fw-normal text-center">Eco<span class="fw-bold">Sens</span></h1>
                    </a>
                    <nav class="d-flex gap-3 flex-column flex-md-row mt-3 mt-md-0">
                        <a href="Index.html" class="text-white text-decoration-none fs-5">Inicio</a>
                        <a href="html/acercade.html" class="text-white text-decoration-none fs-5">Nosotros</a>
                        <a href="html/contacto.html" class="text-white text-decoration-none fs-5">Contacto</a>
                        <a class="text-white text-decoration-none fs-5" asp-controller="Sesion" asp-action="Login">Iniciar Sesión</a>
                    </nav>
                </div>

                <div class="header_texto text-center">
                    <h2 class="m-0 fw-bold">Empresa de gestión de residuos</h2>
                    <p class="m-0">Gestión responsable para un planeta sostenible</p>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="contenedor-footer">
            <div class="barra">
                <a class="logo text-white text-decoration-none" href="index.html">
                    <h1 class="logo__nombre no-margin centrar-texto">Eco<span class="fw-bold">Sens</span></h1>
                    <p>Argenis Edel Esquivel Velazquez 212310355</p>
                    <p>Alan Gerardo García Cervantes 212310169</p>
                    <p>Diana Laura Arreola López 212310885</p>

                </a>

                <div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14398.479786806962!2d-103.5364613!3d25.5510336!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x868fd87de173db69%3A0x87065b2a1a823d00!2sTecNM%20-%20Campus%20Lerdo!5e0!3m2!1ses-419!2smx!4v1731465727756!5m2!1ses-419!2smx" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    <h6 class="map"> Av. Tecnológico N° 1555 . Periférico Lerdo Km. 14.5, Placido Domingo, 35150 Lerdo, Dgo. </h6>

                </div>

            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
