@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<div class="container my-4 p-4 bg-white rounded shadow">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <input type="text" class="form-control w-50" placeholder="Buscar empleado...">
        <button class="btn btn-success" onclick="showAddModal()">+ Agregar Empleado</button>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Cargo</th>
                <th>Departamento</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>

<!-- Modal para agregar/editar empleado -->
<div id="employeeModal" class="modal-custom">
    <div class="modal-content-custom">
        <h2 id="modalTitle">Agregar Empleado</h2>
        <form id="employeeForm">
            <div class="mb-3">
                <label for="name" class="form-label">Nombre:</label>
                <input type="text" id="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="position" class="form-label">Cargo:</label>
                <input type="text" id="position" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="department" class="form-label">Departamento:</label>
                <input type="text" id="department" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" class="form-control" required>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancelar</button>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/site_usuarios.js"></script>
}