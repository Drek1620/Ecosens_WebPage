<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecosens_WebPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecosens_WebPage.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body >
    <header class="bg-dark text-black position-relative" style="min-height: 100px">
        <div class="container text-center w-100 h-100">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center pt-4">
                <a asp-action="index" asp-controller="Home" class="text-white text-decoration-none">
                    <h1 class="m-0 fw-normal text-center">Eco<span class="fw-bold">Sens</span></h1>
                </a>
                <nav class="d-flex gap-3 flex-column flex-md-row mt-3 mt-md-0">
                    <a asp-action="index" asp-controller="Home" class="text-white text-decoration-none fs-5">Inicio</a>
                    <a href="html/acercade.html" class="text-white text-decoration-none fs-5">Nosotros</a>
                    <a href="html/contacto.html" class="text-white text-decoration-none fs-5">Contacto</a>
                    <a href="html/inicio.html" class="text-white text-decoration-none fs-5">Iniciar Sesión</a>
                </nav>
            </div>
        </div>
    </header>
    <div class="container" id="parallax">
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
